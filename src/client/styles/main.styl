$tetris-red = #BE0712

*
	user-select: none
	box-sizing: border-box
	padding: 0
	margin: 0

html
	font-size: 10px
	background: linear-gradient(135deg, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 100%)


body
	background: linear-gradient(135deg, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 100%)
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100vh
	margin: 0
	font-family: 'Quicksand', sans-serif
	min-width 500px


.container-home
	background: #2A2B39
	background-repeat: no-repeat
	background-size: cover
	background-attachment:fixed
	background-position:center
	position: fixed
	top: 0
	left: 0
	bottom: 0
	right 0
	width: 100%
	overflow-y: scroll
	overflow-x: hidden
	margin: 0
	display: flex
	flex-flow: column
	justify-content: flex-start
	align-items: center
	z-index: 100
	animation: gradientEaseIn 1.5s ease-out

.container-fade
	animation: gradientEaseOut 1.5s ease-out

.container-lobby
	background: linear-gradient(135deg, rgba(113,109,135,1) 0%, rgba(42,43,57,1) 72%, rgba(42,43,57,1) 100%);
	background-repeat: no-repeat
	background-size: cover
	background-attachment:fixed
	background-position:center
	position: fixed
	top: 0
	left: 0
	bottom: 0
	right 0
	width: 100%
	overflow-y: scroll
	overflow-x: hidden
	margin: 0
	display: flex
	flex-flow: column
	justify-content: space-around
	align-items: center
	z-index: 100
	overflow: hidden
	animation: gradientEaseIn 2.5s ease-out

