@import url('https://fonts.googleapis.com/css?family=East+Sea+Dokdo|Press+Start+2P');

*
	user-select: none
	box-sizing: border-box
	padding: 0
	margin: 0

html
	font-size: 10px


body
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100vh
	margin: 0
	font-family: 'Quicksand', sans-serif
	min-width 500px


.container
	background: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.10)), url('./static/tetris_world.jpg')
	background-repeat: no-repeat
	background-size: cover
	background-attachment:fixed
	background-position:center
	position: fixed
	top: 0
	left: 0
	bottom: 0
	right 0
	width: 100%
	overflow-y: scroll
	overflow-x: hidden
	margin: 0
	display: flex
	flex-flow: column
	justify-content: flex-start
	align-items: center

.container-lobby
	background: linear-gradient(135deg, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 100%)
	position: fixed
	top: 0
	left: 0
	bottom: 0
	right 0
	width: 100%
	overflow-y: scroll
	overflow-x: hidden
	margin: 0
	display: flex
	flex-flow: column
	justify-content: center
	align-items: center
	z-index: 100

	&:before
		background: linear-gradient(135deg, rgba(0,0,0,1) 0%, rgba(26,22,130,1) 100%)
		content: ''
		position: fixed
		top: 0
		left: 0
		bottom: 0
		right 0
		width: 100%
		overflow-y: scroll
		overflow-x: hidden
		margin: 0
		display: flex
		flex-flow: column
		justify-content: center
		align-items: center
		opacity: 1
		z-index: -100
		animation: gradientEaseIn 1.5s ease-out

.container-home
	background: black
	background-repeat: no-repeat
	background-size: cover
	background-attachment:fixed
	background-position:center
	position: fixed
	top: 0
	left: 0
	bottom: 0
	right 0
	width: 100%
	overflow-y: scroll
	overflow-x: hidden
	margin: 0
	display: flex
	flex-flow: column
	justify-content: flex-start
	align-items: center


h1, h2, h3, h4, h5, p
	margin 0
	padding 0


#container
	display: grid
	grid-template-columns: 1fr 3fr
	grid-template-areas: 'sidebar main'
	width: 100vw
	height: 100vh

#main
	grid-area: main

#new-message
	position: fixed
	bottom: 0
	width: 100%
	padding: 5px
	margin-left: 0px
	border-top: 1px solid #3f3f3f

#messages-list
	padding: 5px 0 0 5px

@import "./components/sidebar"
@import "./components/home"
@import "./components/lobby"


@keyframes gradientEaseIn {
	0% {
		opacity: 0;
	}

	100% {
		opacity: 1;
	}
}
