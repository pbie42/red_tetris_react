h1, h2, h3, h4, h5, p
	margin 0
	padding 0


#container
	display: grid
	grid-template-columns: 1fr 3fr
	grid-template-areas: 'sidebar main'
	width: 100vw
	height: 100vh

#main
	grid-area: main

#new-message
	position: fixed
	bottom: 0
	width: 100%
	padding: 5px
	margin-left: 0px
	border-top: 1px solid #3f3f3f

#messages-list
	padding: 5px 0 0 5px

@import "./components/sidebar"
@import "./components/home"
@import "./components/lobby"


@keyframes gradientEaseIn {
	0% {
		opacity: 0;
	}

	100% {
		opacity: 1;
	}
}

@keyframes gradientEaseInRight {
	0% {
		transform: translateX(-100rem);
		opacity: 0;
	}

	100% {
		transform: translateX(0rem);
		opacity: 1;
	}
}

@keyframes gradientEaseOut {
	0% {
		opacity: 1;
	}

	100% {
		opacity: 0;
	}
}
