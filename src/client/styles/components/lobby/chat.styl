.lobby-chat-new
	background-attachment:fixed
	background-position:center
	height: 45vh
	width: 80vw
	display: flex
	flex-flow: row

	> div
		background: $menu-background
		display: flex
		flex-flow: column
		justify-content: space-around
		height: 100%
		border-radius: .5rem

		&:nth-of-type(1)
			flex-grow: 3
			transform: translateY(-200rem)
			animation: moveInRight 2s
			animation-delay: .5s
			animation-fill-mode: forwards
			transition: width 2s ease-in-out
			padding: 1rem
		&:nth-of-type(2)
			background: none
			max-width: 2rem
			min-width: 2rem
		&:last-of-type
			flex-grow: 1
			transform: translateY(200rem)
			animation: moveInLeft 2s
			animation-delay: .1s
			animation-fill-mode: forwards

		> div
			&:first-of-type
				display: flex
				justify-content: center
			&:nth-of-type(2)
				flex-grow: 2
				width: 100%
				display: flex
				justify-content: center

				> div.chat-room
					width: 90%
					border-top: grey 1px solid
					overflow-y: scroll
					padding: 10rem
					height: 32rem

					&::-webkit-scrollbar
						background-color: transparent !important

					> div
						width: 100%
						display: flex
						margin: .5rem 0

						> div
							background: rgba(118, 71, 245, 0.8)
							min-width 30rem
							max-width 30rem
							// border-radius: .5rem
							padding: 1rem
							color: white

							> div
								> h3
									margin-bottom: 1rem

						.other-message
							width: 1rem
							max-width: 1rem
							min-width: 1rem
							max-height: 6rem
							padding: 0
							clip-path: polygon(100% 0, 0 0, 100% 36%)
							box-shadow: 0px 0px 40px -8px rgba(0,0,0,0.75);
						.own-message
							width: 1rem
							max-width: 1rem
							min-width: 1rem
							max-height: 6rem
							padding: 0
							clip-path: polygon(100% 0, 0 0, 0 36%)
							box-shadow: 0px 0px 40px -8px rgba(0,0,0,0.75);
						
						.message-right
							border-radius: .8rem 0 .8rem .8rem
							box-shadow: 0px 0px 40px -8px rgba(0,0,0,0.75);
						.message-left
							border-radius: 0 .8rem .8rem .8rem
							border-top-right-radius: .8rem
							border-bottom-left-radius: .8rem
							border-bottom-right-radius: .8rem
							box-shadow: 0px 0px 40px -8px rgba(0,0,0,0.75);
					
					.my-message
						justify-content: flex-end

				> div.new-room-inputs
					width: 90%
					border-top: grey 1px solid
					display: flex
					flex-flow: column
					justify-content: space-around
					align-items: center

					> div
						height: 2.5rem
						width: 100%
						border-left: 0.2rem solid #23D6C0
						border-right: 0.2rem solid #23D6C0
						border-bottom: 0.2rem solid #23D6C0
						border-top: 0.2rem solid #23D6C0
						// border-bottom-left-radius: .5rem
						// border-bottom-right-radius: .5rem
						display: flex
						justify-content: center

						> input
							// transform: translateY(-1.2rem)
							height: 2rem
							width: 100%
							text-align: center
							background: none
							border: none
							// border-bottom: grey 1px solid
							font-family: 'Gugi', cursive;
							font-size: 1.5rem

							&::placeholder
								color: white
								font-family: 'Gugi', cursive;

			&:last-of-type
				width: 100%
				display: flex
				justify-content: center
				min-height: 3rem
				margin-bottom: 1rem

				> div
					width: 30%
					min-height: 3rem
					border-left: grey 1px solid
					border-right: grey 1px solid
					border-top: grey 1px solid
					font-family: 'Gugi', cursive;
					border-top-left-radius: 0.2rem
					border-top-right-radius: 0.2rem
					color: white
					text-align: center

					> div
						min-height: 3rem
						padding-top: 0.2rem
						cursor: pointer
						display: flex
						justify-content: center
						align-items: center
				
				> input
					width: 90%
					background: none
					border: none
					border-top: grey 1px solid
					border-bottom: grey 1px solid
					color: white
					font-family: 'Gugi', cursive;
					padding-left: 1rem

					&:focus
						outline: none

					&::placeholder
						color: #FC1576
						font-family: 'Gugi', cursive;
			h1
				color: white
				font-size: 3rem
				// font-family: 'Catamaran', sans-serif;
				font-family: 'Rajdhani', sans-serif;

	.hide
		display: none
