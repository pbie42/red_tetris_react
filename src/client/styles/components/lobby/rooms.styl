.lobby-rooms
	background: $menu-background
	background-attachment:fixed
	background-position:center
	height: 45vh
	width: 80vw
	display: flex
	flex-flow: column
	transform: translateY(-200rem)
	animation: moveInUp 2s
	animation-delay: .5s
	animation-fill-mode: forwards
	border-radius: .5rem

	> div
		display: flex
		height 100%

		> div
			height: 100%

			&:first-of-type
				flex-grow: 2
			
			&:last-of-type
				flex-grow: 1
				height 100%
				display: flex
				justify-content: flex-end

				> div
					background: #fc1576;
					height: 3rem;
					width: 3rem;
					text-align: center;
					align-items: center;
					align-content: center;
					font-size: 2.3rem;
					border-radius: 0 .5rem 0 .5rem
					cursor: pointer;

			&:nth-of-type(2)
				display: flex
				justify-content: center
				flex-flow: column
				height 100%
				align-items: center
				flex-grow: 28
				> div
					width: 100%
					height: 3rem

					&:last-of-type
						flex-grow: 2
						border-top: grey 1px solid
						width: 100%

					> div
						width: 100%
						height: 3rem
						display: flex
						justify-content: center

						h1
							z-index: 100
							color: white
							font-size: 3rem
