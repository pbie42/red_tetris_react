.lobby-rooms
	background: $menu-background
	background-attachment:fixed
	background-position:center
	height: 45vh
	width: 80vw
	display: flex
	flex-flow: column
	transform: translateY(-200rem)
	animation: moveInUp 2s
	animation-delay: .5s
	animation-fill-mode: forwards
	border-radius: .5rem

	> div
		display: flex
		height 100%

		> div
			height: 100%

			&:first-of-type
				flex-grow: 1
				display: flex
				flex-flow: column
				justify-content: center
				align-items: flex-end

				> div
					width: 40%
					font-size: 4rem
					margin-left: 2rem
					cursor pointer
					color: white

					&:hover
						color: rgba(35, 214, 192, 1)
			
			&:last-of-type
				flex-grow: 1
				height 100%
				display: flex
				flex-flow: column
				justify-content: flex-end
				align-items: flex-end

				> div
					&:first-of-type
						flex-grow: 1
						background: #fc1576
						height: 4rem
						width: 4rem
						display: flex
						justify-content: center
						align-items: center
						border-radius: 0 .5rem 0 .5rem
						cursor: pointer
						box-shadow: -4px 4px 25px -1px rgba(0,0,0,0.75)
					
					&:last-of-type
						flex-grow: 135
						color: white
						font-size: 4rem
						width: 100%
						display: flex
						justify-content: center
						align-items: center

						> i
							transform: translate(-1rem, -2.6rem)
							cursor pointer

							&:hover
								color: rgba(35, 214, 192, 1)

			&:nth-of-type(2)
				display: flex
				justify-content: center
				flex-flow: column
				height 100%
				width: 20%
				align-items: center
				flex-grow: 28
				> div
					width: 100%
					height: 3rem
					margin: .7rem 0

					&:first-of-type
						display: flex
						justify-content: center
						h1
							z-index: 100
							color: white
							font-size: 3rem
							font-family: 'Rajdhani', sans-serif

					&:last-of-type
						flex-grow: 2
						border-top: grey 1px solid
						width: 100%

						> div
							width: 100%
							height: 100%
							display: flex
							flex-flow: row
							overflow-x: scroll
							overflow-y: hidden
							padding: 5rem 0

							&::-webkit-scrollbar
								background-color: transparent !important

							> div
								min-width: 25rem
								min-height: 20rem
								margin: 4rem 1rem
								background: rgba(111, 108, 133, 0.55)
								transition: all .2s ease-in-out
								color: white
								display: flex
								flex-flow: column
								align-items: center
								padding: 2rem
								text-align: center
								cursor pointer

								> h1
									flex-grow: 3
									font-family: 'Catamaran', sans-serif;
									font-size: 2.5rem

								> div
									flex-grow: 7
									font-family: 'Jura', sans-serif;

								&:hover
									transform: scale(1.1)
									box-shadow: 0px 0px 38px -1px rgba(0,0,0,0.75)
									background: rgba(35, 214, 192, 0.85)
									color: white


							.hide-it
								opacity: .5


@media (max-height: 785px)
	.lobby-rooms
		> div
			> div
				&:nth-of-type(2)
					> div
						&:first-of-type
							h1
						&:last-of-type
							> div
								padding: 2rem
								&::-webkit-scrollbar
								> div
									margin: 0 1rem

@media (max-width: 400px)
	.lobby-rooms
		> div
			> div
				&:nth-of-type(2)
					> div
						&:first-of-type
							h1
						&:last-of-type
							> div
								min-width 15rem
								padding: 2rem
								&::-webkit-scrollbar
								> div
									padding: 0 3rem 0 0
									margin: 0 1rem

									&:hover
										transform: scale(1)
										box-shadow: 0px 0px 38px -1px rgba(0,0,0,0.75)
										background: rgba(35, 214, 192, 0.85)
										color: white

@media (max-width: 390px)
	.lobby-rooms
		> div
			> div
				&:nth-of-type(2)
					> div
						&:first-of-type
							h1
						&:last-of-type
							> div
								min-width 15rem
								padding: 2rem
								&::-webkit-scrollbar
								> div
									padding: 0 10rem 0 0
									margin: 0 1rem
									min-height: 0rem

									h1
										font-size: 1rem
									
									div
										h2
											font-size: 1rem

									&:hover
										transform: scale(1)
										box-shadow: 0px 0px 38px -1px rgba(0,0,0,0.75)
										background: rgba(35, 214, 192, 0.85)
										color: white
