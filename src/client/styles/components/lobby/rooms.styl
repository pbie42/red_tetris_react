.lobby-rooms
	background: $menu-background
	background-attachment:fixed
	background-position:center
	height: 45vh
	width: 80vw
	display: flex
	flex-flow: column
	transform: translateY(-200rem)
	animation: moveInUp 2s
	animation-delay: .5s
	animation-fill-mode: forwards
	border-radius: .5rem

	> div
		display: flex
		height 100%

		> div
			height: 100%

			&:first-of-type
				flex-grow: 1
				display: flex
				flex-flow: column
				justify-content: center
				align-items: flex-end

				> div
					width: 40%
					font-size: 4rem
					margin-left: 2rem
			
			&:last-of-type
				flex-grow: 1
				height 100%
				display: flex
				justify-content: flex-end

				> div
					background: #fc1576
					height: 4rem
					width: 4rem
					display: flex
					justify-content: center
					align-items: center
					border-radius: 0 .5rem 0 .5rem
					cursor: pointer
					box-shadow: -4px 4px 25px -1px rgba(0,0,0,0.75)

			&:nth-of-type(2)
				display: flex
				justify-content: center
				flex-flow: column
				height 100%
				width: 20%
				align-items: center
				flex-grow: 28
				> div
					width: 100%
					height: 3rem
					margin: .7rem 0

					&:first-of-type
						display: flex
						justify-content: center
						h1
							z-index: 100
							color: white
							font-size: 3rem
							font-family: 'Rajdhani', sans-serif

					&:last-of-type
						flex-grow: 2
						border-top: grey 1px solid
						width: 100%

						> div
							width: 100%
							height: 100%
							display: flex
							flex-flow: row
							// overflow-x: hidden
							overflow-y: hidden

							> div
								min-width: 25rem
								margin: 4rem 1rem
								background: rgba(111, 108, 133, 0.55)
								transition: all .2s ease-in-out
								color: white

								&:hover
									transform: scale(1.1)
									box-shadow: 0px 0px 38px -1px rgba(0,0,0,0.75)
									background: rgba(255, 245, 0, .9)
									color: black
