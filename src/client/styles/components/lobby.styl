.lobby
	background: linear-gradient(135deg, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 100%)
	height: 70vh
	width: 70vw
	display: flex
	flex-flow: column
	border-radius: 1.5rem
	z-index: 100

	&:before
		background: linear-gradient(135deg, rgba(0,0,0,1) 0%, rgba(131,22,67,1) 100%)
		height: 70vh
		width: 70vw
		display: flex
		flex-flow: column
		border-radius: 1.5rem
		z-index: -100
		opacity 0
		transition: opacity 0.45s

	&:hover
		&:before
			opacity: 1

	h1
		color: white
