.error-message-container
	background: $menu-background
	height: 40%
	width: 40%
	display: flex
	flex-flow: column
	justify-content: space-evenly
	align-items: center
	animation: moveInDown 2s
	// animation-delay: .5s
	animation-fill-mode: forwards
	
	> h1
		color: #C00000
		font-size: 9rem
	
	> h2
		color: white
		font-size: 3rem
	
	> h3
		color: white
		font-size: 2rem


.moveOutDivDown
	animation: moveOutDown 2.5s ease-in-out
	animation-fill-mode: forwards
