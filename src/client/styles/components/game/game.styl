$tetris-purple = rgba(118, 71, 245, 1)
$tetris-green = rgba(35, 214, 192, 1)
$tetris-red = #fc1576
$tetris-blue = #0084FF
$tetris-cyan = #00DDEF
$tetris-yellow = #FEE800

.container-game
	> i
		font-size: 20rem

	.container-boards
		width: 95vw
		height: 95vh
		display: flex
		flex-flow: row
		justify-content: space-evenly
		align-items: center

		.players-others
			width: 30vh
			// height: 90vh
			padding: 5rem 0
			display: flex
			flex-flow: column
			justify-content: space-evenly
			align-items: center
			border-radius: 1.5rem

			#others-grid
				margin 2rem 0
				display flex
				flex-wrap wrap
				justify-content center
				height: 35vh
				width: 18vh

				> div
					width 100%
					// max-width 2.2vw
					// max-height 2.2vw
					// border solid #ccc 0.5px
					display: flex
					flex-flow: row

					> div
						width: 100%
						border solid #ccc 0.5px

		.player-main
			background: rgba(34,34,44,0.5);
			height: 86vh;
			width: 26vw;
			min-width: 22rem
			min-height: 55rem
			border-radius: 1.5rem;
			display: flex;
			justify-content: space-between;
			align-items: center;
			flex-flow: column

			#player-grid
				margin 0
				display flex
				flex-wrap wrap
				justify-content center
				height: 70vh
				width: 36vh
				min-width: 22rem
				min-height: 48rem
				margin-bottom: 6rem

				> div
					width 100%
					// max-width 2.2vw
					// max-height 2.2vw
					// border solid #ccc 0.5px
					display: flex
					flex-flow: row

					> div
						width: 100%
						border solid #ccc 0.5px
			
			> div:first-of-type
				background: $menu-background
				display: flex
				justify-content: center
				align-items: center
				color white
				padding: .5rem
				max-width: 100%
				width: 100%
				font-size: 1.5rem
				height 8rem
				min-height: 3.5rem
				margin-top: 2.6rem
				font-family: 'Rajdhani', sans-serif;

.orange
	background: orange
.cyan
	background: $tetris-cyan
.blue
	background: $tetris-blue
.yellow
	background: $tetris-yellow
.green
	background: $tetris-green
.purple
	background: $tetris-purple
.red
	background: $tetris-red

.moveInDivTop
	animation: moveInTop 2.5s
	animation-fill-mode: forwards

.moveInDivLeft
	animation: moveInLeft 2.5s
	animation-fill-mode: forwards

.moveInDivRight
	animation: moveInRight 2.5s
	animation-fill-mode: forwards

.showBackground
	background: $menu-background
