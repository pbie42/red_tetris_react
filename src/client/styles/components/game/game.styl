$tetris-purple = rgba(118, 71, 245, 1)
$tetris-green = rgba(35, 214, 192, 1)
$tetris-red = #fc1576
$tetris-blue = #0084FF
$tetris-cyan = #00DDEF
$tetris-yellow = #FEE800

.container-game
	> i
		font-size: 20rem

	.container-boards
		width: 95vw
		height: 95vh
		display: flex
		flex-flow: row
		justify-content: space-evenly
		align-items: center

		.players-others
			width: 30vh
			// height: 90vh
			padding: 5rem 0
			display: flex
			flex-flow: column
			justify-content: space-evenly
			align-items: center
			background: $menu-background
			border-radius: 1.5rem

			#others-grid
				margin 2rem 0
				display flex
				flex-wrap wrap
				justify-content center
				height: 35vh
				width: 18vh

				> div
					width 100%
					// max-width 2.2vw
					// max-height 2.2vw
					// border solid #ccc 0.5px
					display: flex
					flex-flow: row

					> div
						width: 100%
						border solid #ccc 0.5px

		.player-main
			background: rgba(34,34,44,0.5);
			height: 78vh;
			width: 26vw;
			border-radius: 1.5rem;
			display: flex;
			justify-content: center;
			align-items: center;

			#player-grid
				margin 0
				display flex
				flex-wrap wrap
				justify-content center
				height: 70vh
				width: 36vh

				> div
					width 100%
					// max-width 2.2vw
					// max-height 2.2vw
					// border solid #ccc 0.5px
					display: flex
					flex-flow: row

					> div
						width: 100%
						border solid #ccc 0.5px

.orange
	background: orange
.cyan
	background: $tetris-cyan
.blue
	background: $tetris-blue
.yellow
	background: $tetris-yellow
.green
	background: $tetris-green
.purple
	background: $tetris-purple
.red
	background: $tetris-red
