.container-game
	> i
		font-size: 20rem

	.container-boards
		width: 95vw
		height: 95vh
		display: flex
		flex-flow: row
		justify-content: space-evenly
		align-items: center

		.players-others
			width: 30vh
			height: 90vh
			display: flex
			flex-flow: column
			justify-content: space-evenly
			align-items: center
			background: $menu-background
			border-radius: 1.5rem

			#others-grid
				margin 0
				display flex
				flex-wrap wrap
				justify-content center
				height: 35vh
				width: 18vh

				> div
					width 100%
					// max-width 2.2vw
					// max-height 2.2vw
					// border solid #ccc 0.5px
					display: flex
					flex-flow: row

					> div
						width: 100%
						border solid #ccc 0.5px

		.player-main
			background: rgba(34,34,44,0.5);
			height: 78vh;
			width: 26vw;
			border-radius: 1.5rem;
			display: flex;
			justify-content: center;
			align-items: center;

			#player-grid
				margin 0
				display flex
				flex-wrap wrap
				justify-content center
				height: 70vh
				width: 36vh

				> div
					width 100%
					// max-width 2.2vw
					// max-height 2.2vw
					// border solid #ccc 0.5px
					display: flex
					flex-flow: row

					> div
						width: 100%
						border solid #ccc 0.5px

